# Application Settings
APP_NAME=Face Screening Service
APP_VERSION=2.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8001

# API Authentication (Hardcoded for demo)
API_KEY=test_api_key_12345
API_SECRET=test_secret_67890

# Alternative API Keys (comma-separated for multiple clients)
# API_KEYS=key1:secret1,key2:secret2,key3:secret3

# Security
RATE_LIMIT_PER_MINUTE=100
MAX_FILE_SIZE_MB=10
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis Cache (optional but recommended)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# Model Configuration
DEFAULT_MODEL=ArcFace
DEFAULT_DETECTOR=retinaface
PRELOAD_MODELS=ArcFace,Facenet512
PRELOAD_DETECTORS=retinaface,opencv

# Performance
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_CONCURRENT_REQUESTS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
